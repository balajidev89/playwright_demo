{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier", "cucumber"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "cucumber/async-then": "error",
    "cucumber/no-arrow-functions": "error",
    "cucumber/no-restricted-tags": "off"
  },
  "settings": {
    "cucumber/async-then": "error",
    "cucumber/no-arrow-functions": "error",
    "cucumber/no-restricted-tags": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
